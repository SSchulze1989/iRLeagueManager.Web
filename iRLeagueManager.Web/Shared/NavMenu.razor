@inject ILeagueApiClient apiClient
@inject SharedStateService sharedState
@inject NavigationManager navigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">iRLeagueManager.Web - @sharedState.LeagueName</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    @*<h1>@sharedState.LeagueName</h1>
    <h1>@sharedState.SeasonId</h1>
    <h1>@sharedState.SeasonName</h1>*@
    <nav class="flex-column">
        @if (string.IsNullOrEmpty(sharedState.LeagueName) == false)
        {
            <div class="nav-item px-3">
                <EditForm Model="@sharedState">
                    <InputSelect id="season-select" class="nav-link"
                        TValue="@long"
                        ValueExpression="@(()=>sharedState.SeasonId)" 
                        Value="@sharedState.SeasonId" 
                        ValueChanged="@((long value) => SeasonSelectChanged(value))">
                        @foreach (var season in sharedState.SeasonList)
                        {
                            <option value="@season.SeasonId">@season.SeasonName</option>
                        }
                    </InputSelect>
                </EditForm>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="leagues">
                <span class="oi oi-aperture" aria-hidden="true"></span> Leagues
            </NavLink>
        </div>
        @if (sharedState.LeagueName != null && sharedState.SeasonId != 0)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@($"{sharedState.LeagueName}/Seasons/{sharedState.SeasonId}/Schedules")">
                    <span class="oi oi-list" aria-hidden="true"></span> Schedules
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        sharedState.StateChanged += (sender, e) => StateHasChanged();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void SeasonSelectChanged(long value)
    {
        var queryString = navigationManager.QueryString();
        var refreshUrl = navigationManager.GetUriWithQueryParameter("seasonId", sharedState.SeasonId);
        navigationManager.NavigateTo(refreshUrl);
    }
}
