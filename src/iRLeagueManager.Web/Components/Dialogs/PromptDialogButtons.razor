@namespace iRLeagueManager.Web.Components

@if (CancelClick.HasDelegate)
{
    <MudButton Color="Color.Secondary" OnClick="CancelClick">
        @CancelText
    </MudButton>
}
@if (OkClick.HasDelegate)
{
    <ProgressButton Color="Color.Primary" OnClick="OkClick" Disabled="DisableOkClick" Loading="OkLoading">
        @OkText
    </ProgressButton>
}

@code {
    [Parameter]
    public string OkText { get; set; } = "Ok";
    [Parameter]
    public string CancelText { get; set; } = "Cancel";
    [Parameter]
    public bool DisableOkClick { get; set; } = false;
    [Parameter]
    public EventCallback OkClick { get; set; }
    [Parameter]
    public EventCallback CancelClick { get; set; }
    [Parameter]
    public bool OkLoading { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        BlazorParameterNullException.ThrowIfNull(this, OkText);
        BlazorParameterNullException.ThrowIfNull(this, CancelText);
    }
}
