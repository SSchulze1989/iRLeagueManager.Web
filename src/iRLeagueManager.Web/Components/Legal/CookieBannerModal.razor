<MudDialog>
    <DialogContent>
        <CookiePolicy/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick=ContinueClick>Continue with required cookies</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance DialogInstance { get; set; } = default!;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        BlazorParameterNullException.ThrowIfNull(this, DialogInstance);
    }

    private void ContinueClick()
    {
        DialogInstance.Close();
    }
}
