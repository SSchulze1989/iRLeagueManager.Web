@code {
    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        var url = NavigationManager.Uri;
        var hash = url.IndexOf("#") + 1;
        var hashEnd = url.IndexOfAny(new[] {'?', ' '}, hash);
        var length = hashEnd < 0 ? url.Length - hash : hashEnd - hash;
        if (hash > 0 && length > 0)
        {
            var target = url.Substring(hash, length);
            if (string.IsNullOrEmpty(target) == false)
            {
                await JsRuntime.InvokeVoidAsync("scrollPageElementToTop", target);
                return;
            }
        }
        await JsRuntime.InvokeVoidAsync("scrollPageToTop");
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
