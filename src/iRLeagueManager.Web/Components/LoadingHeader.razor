@using System.ComponentModel

<MudStack>
    @if (HeaderText is not null)
    {
        <div class="mx-2 mt-4 @(HeaderActions is null ? "mb-4" : "")">
            @HeaderText
        </div>
    }
    @if (HeaderActions is not null)
    {
        <MudPaper Elevation="@Elevation">
            <MudToolBar Class="@($"gap-2 my-1 {(HeaderText is null ? "mt-2" : "")}")" Dense="true" WrapContent="true">
                @HeaderActions
            </MudToolBar>
        </MudPaper>
    }
</MudStack>
<MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="@(Loading ? "" : "invisible" + " my-0")" />


@code {
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }
    [Parameter]
    public RenderFragment? HeaderText { get; set; }
    [Parameter]
    public RenderFragment? HeaderActions { get; set; }
    [Parameter]
    public bool Loading { get; set; }
    [Parameter]
    public int Elevation { get; set; } = 10;
}
