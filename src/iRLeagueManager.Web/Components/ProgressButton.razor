@namespace iRLeagueManager.Web.Components

<MudButton Color="Color" ButtonType="ButtonType" Class="@Class" Style="@Style" HtmlTag="@HtmlTag" OnClick="OnClick" Disabled="Disabled">
    @if (Loading)
    {
        <MudProgressCircular Color="ProgressColor" Value="Value" Indeterminate="Indeterminate" Size="Size.Small" Class="me-2" Style="scale: 0.75"/>
    }
    @ChildContent
</MudButton>

@code {
    [Parameter]
    public bool Loading { get; set; }
    [Parameter]
    public Color Color { get; set; } = Color.Default;
    [Parameter]
    public ButtonType ButtonType { get; set; } = ButtonType.Button;
    [Parameter]
    public Color ProgressColor { get; set; } = Color.Default;
    [Parameter]
    public string Class { get; set; } = string.Empty;
    [Parameter]
    public string Style { get; set; } = string.Empty;
    [Parameter]
    public string HtmlTag { get; set; } = "button";
    [Parameter]
    public double Value { get; set; }
    [Parameter]
    public bool Indeterminate { get; set; } = true;
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public bool Disabled { get; set; } = false;
}
