<EditForm EditContext=EditContext Model=Model AdditionalAttributes=AdditionalAttributes 
    OnSubmit=OnSubmit OnInvalidSubmit=OnInvalidSubmit OnValidSubmit=OnValidSubmit>
    <div>
        @ChildContent
    </div>
    <div class="pt-5 pb-2">
        <div class="row">
            <div class="col-sm-6 d-flex justify-content-center">
                <button class="btn btn-primary">@SubmitText</button>
            </div>
            <div class="col-sm-6 d-flex justify-content-center">
                <div class="btn btn-secondary" @onclick="Cancel">@CancelText</div>
            </div>
        </div>
    </div>
</EditForm>